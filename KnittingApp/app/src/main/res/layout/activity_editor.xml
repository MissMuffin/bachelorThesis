<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="de.muffinworks.knittingapp.EditorActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_weight="2">

        <net.simplyadvanced.widgets.KeyboardlessEditText2
            android:id="@+id/test"
            style="@style/DisplayEditTextStyle.Formula"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--todo add number keys layout-->
        <include layout="@layout/keyboard_grid" />
        <include layout="@layout/keyboard_actions_one_col" />

    </LinearLayout>

</LinearLayout>
